{% extends 'base.html.twig' %}




{% block presentation %}
{% include 'accueil/other/accroche_connect.html.twig' %}
{% endblock %}




{% block body %}

<div id="form_ancre"></div>




<div class="container">


 {{ form_start(formSnowboarder, {'attr': {'class': 'mui-form'}}) }}

    <h3>Formulaire de connexion</h3>

    {# nom #}
    <div class="mui-textfield mui-textfield--float-label">
        {{ form_widget(formSnowboarder.name, { 'attr': {'type': 'text'} }) }}
        {{ form_label(formSnowboarder.name, 'Nom') }}
    </div>
    
    

    {# password #}
    <div class="mui-textfield mui-textfield--float-label">
        {{ form_widget(formSnowboarder.password, { 'attr': {'type': 'text'} }) }}
        {{ form_label(formSnowboarder.password, 'Password') }}
    </div>
    
    
    
    
    {{ form_widget(formSnowboarder.connect, {'attr': {'class': 'mui-btn mui-btn--raised'}}) }}
    
    
    <a href="http://127.0.0.1:8000/forgotPassword">I forgot my password, so silly of me...</a>
    
     
    {{ form_end(formSnowboarder) }}

</div>


{% endblock %}