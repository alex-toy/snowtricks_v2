{% extends 'base.html.twig' %}




{% block presentation %}
{% include 'accueil/other/accroche_v1.html.twig' %}
{% endblock %}




{% block body %}
<h3>Formulaire de connexion</h3>

<div class="well">
  {{ form_start(formSnowboarder, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(formSnowboarder) }}


  
    {# nom #}
  <div class="form-group">
    {{ form_label(formSnowboarder.name, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(formSnowboarder.name) }}

    <div class="col-sm-10">
      {# Génération de l'input. #}
      {{ form_widget(formSnowboarder.name, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

    
    
    {# password #}
  <div class="form-group">
    {{ form_label(formSnowboarder.password, "password", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(formSnowboarder.password) }}
    <div class="col-sm-10">
      {{ form_widget(formSnowboarder.password, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
    
    
    <a href="http://127.0.0.1:8000/forgotPassword">I forgot my password, so silly of me...</a>
    

  {{ form_end(formSnowboarder) }}
</div>
{% endblock %}