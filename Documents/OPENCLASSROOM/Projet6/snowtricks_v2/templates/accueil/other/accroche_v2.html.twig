{% block accroche_v2 %}
<section class="generic-banner relative">				
				<div class="container" style="background-image:url('/uploads/images/{{figure.mainimage}}');height: 100%;background-repeat: no-repeat;background-size: cover;">
					<div class="row height align-items-center justify-content-center" >
						<div class="col-lg-10">
							<div class="generic-banner-content" >
								<h2 class="text-white text-center">{{ figure.name }}</h2>
								<p class="text-white">{{ figure.description }}</p>
                                <p>created on {{ figure.createdAt|date("m/d/Y") }} at {{ figure.createdAt|date("m/d/Y") }}</p>
                                <p>Difficult√© : {{ figure.difficulty }}</p>
                                {% if app.session.get('sessionId') %}
                                <p><a class="btn btn-primary" href="http://127.0.0.1:8000/modifyfigure/{{ figure.id }}">
                                    Modifier
                                </a></p>
                                {% endif %}
                
							</div>							
						</div>
					</div>
				</div>
			</section>	
{% endblock %}  






