{% extends 'base.html.twig' %}


{% block body %}


<!-- Texte d'accroche ====================================================-->
<div class="row">
  <div class="col-lg-12 encart_titre  page-header">
  
  <h2 class="title">Snowtricks, le site du surf</h2>
      {{name_of_connected}}
  </div>
</div>






<!-- flash modification_figure ====================================================-->
{% for message in app.flashes('modification_figure') %}
<div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Vous avez un message :</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{ message }}
      </div>
      <div class="modal-footer">
        <button id="closebutton" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>	
{% endfor %} 




<!-- flash creation_figure ====================================================-->
{% for message in app.flashes('creation_figure') %}
<div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Vous avez un message :</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{ message }}
      </div>
      <div class="modal-footer">
        <button id="closebutton" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>	



{% endfor %} 



   
{% endblock %}






















