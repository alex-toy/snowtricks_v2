{% extends 'base.html.twig' %}


{% block presentation %}
{% include 'accueil/other/section2.html.twig' %}
{% endblock %}


{% block body %}
<h3>création d'un compte</h3>

<div class="well">
  {{ form_start(formSnowboarder, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(formSnowboarder) }}


  
    {# nom #}
  <div class="form-group">
    {{ form_label(formSnowboarder.name, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(formSnowboarder.name) }}

    <div class="col-sm-10">
      {# Génération de l'input. #}
      {{ form_widget(formSnowboarder.name, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  
    
   {# email #}
  <div class="form-group">
    {{ form_label(formSnowboarder.email, "email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(formSnowboarder.email) }}
    <div class="col-sm-10">
      {{ form_widget(formSnowboarder.email, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
    
    
    {# password #}
  <div class="form-group">
    {{ form_label(formSnowboarder.password, "password", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(formSnowboarder.password) }}
    <div class="col-sm-10">
      {{ form_widget(formSnowboarder.password, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
    
    
    
    
    {# portrait du snowboarder #}
  <div class="form-group">
    {{ form_label(formSnowboarder.portrait, "portrait", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(formSnowboarder.portrait) }}
    <div class="col-sm-10">
      {{ form_widget(formSnowboarder.portrait, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
    
    
    
    
    

  {{ form_end(formSnowboarder) }}
</div>
{% endblock %}